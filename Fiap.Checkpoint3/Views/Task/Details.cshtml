@model Fiap.Checkpoint3.Model.TaskItem

@{
    ViewData["Title"] = "Detalhes da Tarefa";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-4 border-0 shadow-sm">
            <div class="card-header" style="background-color:#264653; color:#fff;">
                <h4 class="mb-0 text-center">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Título</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4">Descrição</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "Tarefa sem descrição")</dd>

                    <dt class="col-sm-4">Prioridade</dt>
                    <dd class="col-sm-8"><span class="badge bg-warning text-dark">@Model.Priority</span></dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8"><span class="badge bg-info">@Model.Status</span></dd>

                    <dt class="col-sm-4">Criada em</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Excluir</a>
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>

